[
  {
    "id": "ap_001",
    "capability": "Active/Passive Voice Alternation",
    "description": "Tests if the model assigns correct thematic roles regardless of active or passive voice.",
    "test_cases": [
      {
        "sentence_active": ["The", "dog", "chased", "the", "ball", "."],
        "predicate_mask_active": [0, 0, 1, 0, 0, 0],
        "expected_roles_active": ["O", "ARG0", "V", "O", "ARG1", "O"],
        "sentence_passive": ["The", "ball", "was", "chased", "by", "the", "dog", "."],
        "predicate_mask_passive": [0, 0, 0, 1, 0, 0, 0, 0],
        "expected_roles_passive": ["O", "ARG1", "O", "V", "O", "O", "ARG0", "O"]
      },
      {
        "sentence_active": ["Anna", "loves", "Benjamin", "."],
        "predicate_mask_active": [0, 1, 0, 0],
        "expected_roles_active": ["ARG0", "V", "ARG1", "O"],
        "sentence_passive": ["Benjamin", "is", "loved", "by", "Anna", "."],
        "predicate_mask_passive": [0, 0, 1, 0, 0, 0],
        "expected_roles_passive": ["ARG1", "O", "V", "O", "ARG0", "O"]
      },
      {
